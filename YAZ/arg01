('--target-update', type=int,       default=int(8000), metavar='τ', help='Number of steps after which to update target network')
('--T-max', type=int,               default=int(5e7), metavar='STEPS', help='Number of training steps (4x number of frames)')
('--learn-start', type=int,         default=int(10000), metavar='STEPS', help='Number of steps before starting training')
('--memory-capacity', type=int,     default=int(1e6), metavar='CAPACITY', help='Experience replay memory capacity')
('--replay-frequency', type=int,    default=4, metavar='k', help='Frequency of sampling from memory')
('--multi-step', type=int,          default=3, metavar='n', help='Number of steps for multi-step return')
('--architecture', type=str,        default='YAZ', choices=['canonical', 'data-efficient', 'YAZ'], metavar='ARCH', help='Network architecture')
('--hidden-size', type=int,         default=512, metavar='SIZE', help='Network hidden size')
('--learning-rate', type=float,     default=0.0000625, metavar='η', help='Learning rate')
('--evaluation-interval', type=int, default=1e5, metavar='STEPS', help='Number of training steps between evaluations')
